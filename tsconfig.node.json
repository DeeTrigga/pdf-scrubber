{
  "compilerOptions": {
    "jsx": "react",
    "composite": true,
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "module": "ESNext",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "types": ["vite/client", "node"],
  },
  "include": [
    "config/vite.config.ts", 
    "electron",
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}